{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "Bump to release version %s",
      "allowBranch": [
        "main"
      ],
      "npmClient": "npm"
    }
  },
  "version": "0.0.4",
  "packages": [
    "packages/*",
    "engines/*"
  ],
  "loglevel": "error",
  "registry": "https://registry.npmjs.org/",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--pure-lockfile"
  ]
}
